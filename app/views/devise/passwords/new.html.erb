<main class="form-signin shadow position-absolute top-50 start-50 translate-middle">
  <h2 class='h3 mb-3 fw-normal'>Forgot your password?</h2>
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="field">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:'form-control', placeholder:'Enter your email' %>
    </div>
    <div class="actions">
      <%= f.submit "Send me reset password instructions",class: 'w-100 btn btn-primary mt-4' %>
    </div>
  <% end %>
  <div class='mt-4'>
    <%= link_to "Log in", new_session_path(resource_name) %> | <%= link_to "Sign up", new_registration_path(resource_name) %>
  </div>
</main>
