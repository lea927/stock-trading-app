<% if current_page?(users_admin_index_path) %>
  <li><%= link_to "All Users", users_admin_index_path, class: 'btn btn-outline-secondary mx-2 text-decoration-none active' %></li>
  <li class='mx-2 position-relative'>
    <%= link_to "Pending Brokers", pending_brokers_path, class: 'btn btn-outline-secondary text-decoration-none'%>
    <% if !@unapproved_users.empty? %>
      <span class='position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger'>
        <%= @unapproved_users.count %>
      </span>
    <% end %>
  </li>
<% elsif current_page?(pending_brokers_path) %>
  <li><%= link_to "All Users", users_admin_index_path, class: 'btn btn-outline-secondary mx-2 text-decoration-none' %></li>
  <li class='mx-2 position-relative'>
    <%= link_to "Pending Brokers", pending_brokers_path, class: 'btn btn-outline-secondary text-decoration-none active' %>
    <% if !@unapproved_users.empty? %>
      <span class='position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger'>
        <%= @unapproved_users.count %>
      </span>
    <% end %>
  </li>
<% else %>
  <li><%= link_to "All Users", users_admin_index_path, class: 'btn btn-outline-secondary mx-2 text-decoration-none' %></li>
  <li class='mx-2 position-relative'>
    <%= link_to "Pending Brokers", pending_brokers_path, class: 'btn btn-outline-secondary text-decoration-none'%>
    <% if !@unapproved_users.empty? %>
      <span class='position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger'>
        <%= @unapproved_users.count %>
      </span>
    <% end %>
  </li>
<% end %>
